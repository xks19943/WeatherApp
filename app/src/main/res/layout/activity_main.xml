<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.liaoye.weatherapp.activity.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:paddingBottom="@dimen/width_8"
            android:paddingTop="@dimen/width_8"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_area"
                android:text="地区"
                android:textColor="@color/normalTextColor"
                android:textSize="@dimen/normal"/>
            <TextView
                android:id="@+id/tv_temperature"
                android:textSize="24sp"
                android:text="20°"
                android:layout_marginTop="@dimen/width_8"
                android:layout_width="wrap_content"
                android:textColor="@color/normalTextColor"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="@dimen/width_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_date"
                    android:textSize="@dimen/normal"
                    android:text="日期"
                    android:textColor="@color/normalTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_time"
                    android:text="时间"
                    android:textColor="@color/normalTextColor"
                    android:layout_marginLeft="@dimen/width_8"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/normal"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/width_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_week"
                    android:textSize="@dimen/normal"
                    android:text="星期几"
                    android:textColor="@color/normalTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_moon"
                    android:text="农历"
                    android:textColor="@color/normalTextColor"
                    android:layout_marginLeft="@dimen/width_8"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/normal"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_1"
            android:background="@color/dividerColor"/>

        <com.liaoye.weatherapp.views.MyRecyclerView
            android:id="@+id/rv_weather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/width_8"
            android:paddingBottom="@dimen/width_8"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_1"
            android:background="@color/dividerColor"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_1"
            android:background="@color/dividerColor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/width_16"
            android:paddingTop="@dimen/width_8"
            android:paddingBottom="@dimen/width_8"
            android:paddingRight="@dimen/width_16"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:textSize="@dimen/large"
                    android:text="穿衣"
                    android:textColor="@color/normalTextColor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_chuanyi"
                    android:textSize="@dimen/primary"
                    android:textColor="@color/normalTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:layout_marginTop="@dimen/width_8"
                android:id="@+id/tv_chuanyiDesc"
                android:text="描述描述描述"
                android:textSize="@dimen/normal"
                android:textColor="@color/normalTextColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/width_16"
            android:paddingTop="@dimen/width_8"
            android:paddingBottom="@dimen/width_8"
            android:paddingRight="@dimen/width_16"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:textSize="@dimen/large"
                    android:text="感冒"
                    android:textColor="@color/normalTextColor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_ganmao"
                    android:textSize="@dimen/primary"
                    android:textColor="@color/normalTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:layout_marginTop="@dimen/width_8"
                android:id="@+id/tv_ganmaoDesc"
                android:text="描述描述描述"
                android:textSize="@dimen/normal"
                android:textColor="@color/normalTextColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_1"
            android:background="@color/dividerColor"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/width_16"
            android:paddingTop="@dimen/width_8"
            android:paddingBottom="@dimen/width_8"
            android:paddingRight="@dimen/width_16"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:textSize="@dimen/large"
                    android:text="空调"
                    android:textColor="@color/normalTextColor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_kongtiao"
                    android:textSize="@dimen/primary"
                    android:textColor="@color/normalTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:layout_marginTop="@dimen/width_8"
                android:id="@+id/tv_kongtiaoDesc"
                android:text="描述描述描述"
                android:textSize="@dimen/normal"
                android:textColor="@color/normalTextColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_1"
            android:background="@color/dividerColor"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/width_16"
            android:paddingTop="@dimen/width_8"
            android:paddingBottom="@dimen/width_8"
            android:paddingRight="@dimen/width_16"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:textSize="@dimen/large"
                    android:text="洗车"
                    android:textColor="@color/normalTextColor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_xiche"
                    android:textSize="@dimen/primary"
                    android:textColor="@color/normalTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:layout_marginTop="@dimen/width_8"
                android:id="@+id/tv_xicheDesc"
                android:text="描述描述描述"
                android:textSize="@dimen/normal"
                android:textColor="@color/normalTextColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_1"
            android:background="@color/dividerColor"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/width_16"
            android:paddingTop="@dimen/width_8"
            android:paddingBottom="@dimen/width_8"
            android:paddingRight="@dimen/width_16"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:textSize="@dimen/large"
                    android:text="运动"
                    android:textColor="@color/normalTextColor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_yundong"
                    android:textSize="@dimen/primary"
                    android:textColor="@color/normalTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:layout_marginTop="@dimen/width_8"
                android:id="@+id/tv_yundongDesc"
                android:text="描述描述描述"
                android:textSize="@dimen/normal"
                android:textColor="@color/normalTextColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_1"
            android:background="@color/dividerColor"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/width_16"
            android:paddingTop="@dimen/width_8"
            android:paddingBottom="@dimen/width_8"
            android:paddingRight="@dimen/width_16"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:textSize="@dimen/large"
                    android:text="紫外线"
                    android:textColor="@color/normalTextColor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_ziwaixian"
                    android:textSize="@dimen/primary"
                    android:textColor="@color/normalTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:layout_marginTop="@dimen/width_8"
                android:id="@+id/tv_ziwaixianDesc"
                android:text="描述描述描述"
                android:textSize="@dimen/normal"
                android:textColor="@color/normalTextColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>
